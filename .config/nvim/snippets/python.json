  "disjoint set union": {
    "prefix": "dsu",
    "body": [
      "class DSU:",
      "    def __init__(self, n):",
      "        self.parent = [i for i in range(n)]",
      "        self.size = [1 for i in range(n)]",
      "",
      "    def find(self, x):",
      "        if self.parent[x] != x:",
      "            self.parent[x] = self.find(self.parent[x])",
      "        return self.parent[x]",
      "",
      "    def union(self, x, y):",
      "        x = self.find(x)",
      "        y = self.find(y)",
      "        if x == y:",
      "            return",
      "        if self.size[x] < self.size[y]:",
      "            x, y = y, x",
      "        self.parent[y] = x",
      "        if self.size[x] == self.size[y]:",
      "            self.size[x] += self.size[y]"
    ],
    "description": "Disjoint Set Union"
  }
}
